# 環境変数設定例
# このファイルを.envにコピーして、実際の値を設定してください
# 注意: .envファイルは絶対にGitにコミットしないでください

# Claude API設定
CLAUDE_API_KEY=your_claude_api_key_here

# アプリケーションAPIキー（カンマ区切りで複数指定可能）
VALID_API_KEYS=your_app_api_key_1,your_app_api_key_2

# 環境設定
ENVIRONMENT=development

# CORS設定（カンマ区切りで複数指定可能）
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# レート制限設定
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_SECONDS=60

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=backend.log

# セキュリティ設定
# マスターキー（暗号化用）- 本番環境では必ず変更してください
MASTER_KEY=your_master_key_here

# APIキーのハッシュ値（sha256）
API_KEY_HASH=your_api_key_hash_here

# Notion API設定（オプション）
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here
